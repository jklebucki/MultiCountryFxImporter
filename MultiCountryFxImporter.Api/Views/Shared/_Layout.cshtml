@{
    var title = ViewData["Title"] as string ?? "MultiCountryFxImporter";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <script src="https://cdn.tailwindcss.com"></script>
    @RenderSection("Styles", required: false)
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-indigo-950 text-slate-100">
    <header class="border-b border-slate-800/70 bg-slate-950/70 backdrop-blur">
        <div class="max-w-6xl mx-auto px-6 py-4 flex flex-wrap items-center justify-between gap-3">
            <div>
                <p class="text-xs uppercase tracking-[0.35em] text-indigo-200/70">MultiCountryFxImporter</p>
                <p class="text-lg font-semibold text-white">Dashboard</p>
            </div>
            <nav class="flex flex-wrap items-center gap-3 text-sm">
                <a href="/" class="px-4 py-2 rounded-full border border-slate-700 text-slate-200 hover:bg-slate-800/50 transition">
                    API Console
                </a>
                <a href="/worker-schedule" class="px-4 py-2 rounded-full border border-slate-700 text-slate-200 hover:bg-slate-800/50 transition">
                    Worker Schedule
                </a>
                <a href="/logs" class="px-4 py-2 rounded-full border border-slate-700 text-slate-200 hover:bg-slate-800/50 transition">
                    Logs
                </a>
                @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                {
                    <a href="/admin/users" class="px-4 py-2 rounded-full border border-amber-500/60 text-amber-100 hover:bg-amber-500/20 transition">
                        Admin
                    </a>
                }
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <form method="post" action="/account/logout" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="px-4 py-2 rounded-full border border-rose-500/60 text-rose-100 hover:bg-rose-500/20 transition">
                            Sign out
                        </button>
                    </form>
                }
                else
                {
                    <a href="/account/login" class="px-4 py-2 rounded-full border border-slate-700 text-slate-200 hover:bg-slate-800/50 transition">
                        Sign in
                    </a>
                    <a href="/account/register" class="px-4 py-2 rounded-full border border-emerald-500/60 text-emerald-100 hover:bg-emerald-500/20 transition">
                        Register
                    </a>
                }
            </nav>
        </div>
    </header>

    <main class="max-w-6xl mx-auto px-6 py-10">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)
</body>
</html>
