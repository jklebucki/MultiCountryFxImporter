@model MultiCountryFxImporter.Api.Models.Account.RegisterViewModel
@{
    ViewData["Title"] = "Create account";
    var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage).ToList();
}

<header class="mb-10">
    <h1 class="text-4xl md:text-5xl font-semibold text-white mt-2">Create account</h1>
    <p class="text-slate-300 mt-4 max-w-xl">Register with a username and email address.</p>
</header>

<section class="bg-slate-900/70 border border-slate-700/60 rounded-2xl p-6 shadow-lg max-w-xl">
    @if (errors.Count > 0)
    {
        <div class="mb-4 rounded-xl border border-rose-500/40 bg-rose-500/10 p-3 text-sm text-rose-200">
            <ul class="list-disc list-inside space-y-1">
                @foreach (var error in errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <form method="post" action="/account/register" class="space-y-4">
        @Html.AntiForgeryToken()
        <div>
            <label class="text-xs uppercase text-slate-400">Username</label>
            <input name="UserName" value="@Model?.UserName" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm" autocomplete="username" />
        </div>
        <div>
            <label class="text-xs uppercase text-slate-400">Email</label>
            <input type="email" name="Email" value="@Model?.Email" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm" autocomplete="email" />
        </div>
        <div>
            <label class="text-xs uppercase text-slate-400">Password</label>
            <input type="password" name="Password" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm" autocomplete="new-password" />
        </div>
        <div>
            <label class="text-xs uppercase text-slate-400">Confirm password</label>
            <input type="password" name="ConfirmPassword" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm" autocomplete="new-password" />
        </div>
        <button class="w-full bg-emerald-500 hover:bg-emerald-400 text-white font-semibold py-2 rounded-lg transition" type="submit">
            Create account
        </button>
    </form>

    <div class="mt-6 text-sm text-slate-300 flex flex-col gap-2">
        <a href="/account/login" class="text-indigo-200 hover:text-indigo-100">Already have an account? Sign in</a>
        <a href="/" class="text-slate-400 hover:text-slate-200">Back to dashboard</a>
    </div>
</section>
