@model MultiCountryFxImporter.Api.Models.Account.LoginViewModel
@{
    Layout = null;
    var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage).ToList();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sign in</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-indigo-950 text-slate-100">
    <div class="max-w-4xl mx-auto px-6 py-10">
        <header class="mb-10">
            <p class="text-sm uppercase tracking-[0.25em] text-indigo-200/70">MultiCountryFxImporter</p>
            <h1 class="text-4xl md:text-5xl font-semibold text-white mt-2">Sign in</h1>
            <p class="text-slate-300 mt-4 max-w-xl">Use your username or email to access the console.</p>
        </header>

        <section class="bg-slate-900/70 border border-slate-700/60 rounded-2xl p-6 shadow-lg max-w-xl">
            @if (errors.Count > 0)
            {
                <div class="mb-4 rounded-xl border border-rose-500/40 bg-rose-500/10 p-3 text-sm text-rose-200">
                    <ul class="list-disc list-inside space-y-1">
                        @foreach (var error in errors)
                        {
                            <li>@error</li>
                        }
                    </ul>
                </div>
            }

            <form method="post" action="/account/login" class="space-y-4">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                <div>
                    <label class="text-xs uppercase text-slate-400">Username or email</label>
                    <input name="Login" value="@Model?.Login" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm" autocomplete="username" />
                </div>
                <div>
                    <label class="text-xs uppercase text-slate-400">Password</label>
                    <input type="password" name="Password" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm" autocomplete="current-password" />
                </div>
                <label class="flex items-center gap-2 text-sm text-slate-300">
                    <input type="checkbox" name="RememberMe" class="rounded border-slate-600 bg-slate-900" />
                    Remember me
                </label>
                <button class="w-full bg-indigo-500 hover:bg-indigo-400 text-white font-semibold py-2 rounded-lg transition" type="submit">
                    Sign in
                </button>
            </form>

            <div class="mt-6 text-sm text-slate-300 flex flex-col gap-2">
                <a href="/account/forgot-password" class="text-indigo-200 hover:text-indigo-100">Forgot password?</a>
                <a href="/account/register" class="text-indigo-200 hover:text-indigo-100">Create a new account</a>
                <a href="/" class="text-slate-400 hover:text-slate-200">Back to dashboard</a>
            </div>
        </section>
    </div>
</body>
</html>
