@model MultiCountryFxImporter.Api.Models.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
    var errors = ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage).ToList();
    var message = ViewData["Message"] as string;
}

<header class="mb-10">
    <h1 class="text-4xl md:text-5xl font-semibold text-white mt-2">Reset password</h1>
    <p class="text-slate-300 mt-4 max-w-xl">We will send you a password reset link.</p>
</header>

<section class="bg-slate-900/70 border border-slate-700/60 rounded-2xl p-6 shadow-lg max-w-xl">
    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="mb-4 rounded-xl border border-emerald-500/40 bg-emerald-500/10 p-3 text-sm text-emerald-200">
            @message
        </div>
    }
    @if (errors.Count > 0)
    {
        <div class="mb-4 rounded-xl border border-rose-500/40 bg-rose-500/10 p-3 text-sm text-rose-200">
            <ul class="list-disc list-inside space-y-1">
                @foreach (var error in errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }

    <form method="post" action="/account/forgot-password" class="space-y-4">
        @Html.AntiForgeryToken()
        <div>
            <label class="text-xs uppercase text-slate-400">Email</label>
            <input type="email" name="Email" value="@Model?.Email" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm" autocomplete="email" />
        </div>
        <button class="w-full bg-indigo-500 hover:bg-indigo-400 text-white font-semibold py-2 rounded-lg transition" type="submit">
            Send reset link
        </button>
    </form>

    <div class="mt-6 text-sm text-slate-300 flex flex-col gap-2">
        <a href="/account/login" class="text-indigo-200 hover:text-indigo-100">Back to sign in</a>
        <a href="/" class="text-slate-400 hover:text-slate-200">Back to dashboard</a>
    </div>
</section>
