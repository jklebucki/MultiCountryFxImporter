@{
    ViewData["Title"] = "Worker Schedule";
}
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
}

<div id="app">
    <header class="mb-10">
        <h1 class="text-4xl md:text-5xl font-semibold text-white mt-2">Worker Schedule</h1>
        <p class="text-slate-300 mt-4 max-w-2xl">
            Configure which IFS environments should be handled by the worker and at what local time each environment executes.
            Changes are saved to a JSON file and picked up by the worker without restart.
        </p>
    </header>

        <section class="bg-slate-900/70 border border-slate-700/60 rounded-2xl p-6 shadow-lg">
            <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
                <div>
                    <h2 class="text-xl font-semibold text-white">Environment Entries</h2>
                    <p class="text-sm text-slate-300 mt-2">Add or remove environments. Empty environments are ignored.</p>
                </div>
                <button class="px-4 py-2 rounded-lg bg-indigo-500 hover:bg-indigo-400 text-white font-semibold transition" @@click="addEntry">
                    Add Environment
                </button>
            </div>

            <div class="mt-6 space-y-4">
                <div v-for="(entry, index) in entries" :key="entry.id" class="grid gap-4 md:grid-cols-4 bg-slate-950/70 border border-slate-800 rounded-xl p-4">
                    <div>
                        <label class="text-xs uppercase text-slate-400">Environment</label>
                        <select v-model="entry.environment" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm">
                            <option v-for="env in environments" :key="env" :value="env">{{ env }}</option>
                        </select>
                    </div>
                    <div>
                        <label class="text-xs uppercase text-slate-400">Company</label>
                        <input v-model="entry.company" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm" />
                    </div>
                    <div>
                        <label class="text-xs uppercase text-slate-400">Run At (HH:mm:ss)</label>
                        <input data-timepicker v-model="entry.runAtLocalTime" class="w-full mt-1 bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm" />
                    </div>
                    <div class="flex items-end">
                        <button class="w-full bg-rose-500 hover:bg-rose-400 text-white font-semibold py-2 rounded-lg transition" @@click="removeEntry(index)">
                            Remove
                        </button>
                    </div>
                </div>
            </div>

            <div class="mt-6 flex flex-col gap-3 md:flex-row md:items-center">
                <button class="px-5 py-2 rounded-lg bg-emerald-500 hover:bg-emerald-400 text-white font-semibold transition" @@click="save">
                    Save Schedule
                </button>
                <button class="px-5 py-2 rounded-lg border border-slate-600 text-slate-200 text-sm hover:bg-slate-800/50 transition" @@click="reload">
                    Reload from File
                </button>
                <span class="text-sm text-slate-400" v-if="lastSaved">Last saved: {{ lastSaved }}</span>
            </div>
        </section>

        <section class="mt-8 bg-slate-950/70 border border-slate-800 rounded-2xl p-6">
            <h2 class="text-xl font-semibold text-white">Response Details</h2>
            <div v-if="result" class="mt-4 space-y-3">
                <p class="text-sm text-slate-300"><span class="text-slate-400">Status:</span> {{ result.status }}</p>
                <pre class="bg-slate-900 rounded-lg p-3 text-xs text-slate-200 overflow-auto">{{ result.body }}</pre>
            </div>
            <div v-else class="mt-4 text-sm text-slate-400">
                Save or reload to see response details.
            </div>
        </section>
    </div>

@section Scripts {
    <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        const { createApp } = Vue;
        createApp({
            data() {
                return {
                    environments: ["PROD", "TEST", "SZKOL"],
                    entries: [],
                    result: null,
                    lastSaved: null
                };
            },
            mounted() {
                this.reload();
                this.$nextTick(() => {
                    this.initTimePickers();
                });
            },
            methods: {
                formatApiBody(body, response) {
                    if (!body) {
                        return "<empty>";
                    }
                    const contentType = response.headers.get("content-type") || "";
                    const looksJson = contentType.includes("application/json") || body.trim().startsWith("{") || body.trim().startsWith("[");
                    if (!looksJson) {
                        return body;
                    }
                    try {
                        const parsed = JSON.parse(body);
                        return JSON.stringify(parsed, null, 2);
                    } catch {
                        return body;
                    }
                },
                initTimePickers() {
                    const elements = document.querySelectorAll("[data-timepicker]");
                    elements.forEach(element => {
                        if (element._flatpickr) {
                            return;
                        }
                        flatpickr(element, {
                            enableTime: true,
                            noCalendar: true,
                            time_24hr: true,
                            enableSeconds: true,
                            dateFormat: "H:i:S",
                            allowInput: true
                        });
                    });
                },
                normalizeTime(value) {
                    if (!value) {
                        return "";
                    }
                    if (/^\d{2}:\d{2}:\d{2}$/.test(value)) {
                        return value;
                    }
                    if (/^\d{2}:\d{2}$/.test(value)) {
                        return `${value}:00`;
                    }
                    return value;
                },
                generateId() {
                    if (window.crypto && typeof window.crypto.randomUUID === "function") {
                        return window.crypto.randomUUID();
                    }
                    return `id-${Date.now()}-${Math.random().toString(16).slice(2)}`;
                },
                addEntry() {
                    this.entries.push({
                        id: this.generateId(),
                        environment: "TEST",
                        company: "KFT",
                        runAtLocalTime: "02:00:00"
                    });
                    this.$nextTick(() => {
                        this.initTimePickers();
                    });
                },
                removeEntry(index) {
                    this.entries.splice(index, 1);
                },
                async reload() {
                    this.result = { status: "Loading...", body: "Fetching schedule..." };
                    try {
                        const response = await fetch("/api/worker-schedule");
                        const raw = await response.text();
                        const body = this.formatApiBody(raw, response);
                        this.result = { status: response.status, body: body || "<empty>" };
                        if (response.ok) {
                            const parsed = JSON.parse(raw || "{}");
                            const list = parsed.workerSchedule?.environments ?? [];
                            this.entries = list.map(entry => ({
                                id: this.generateId(),
                                environment: entry.environment ?? "TEST",
                                company: entry.company ?? "KFT",
                                runAtLocalTime: entry.runAtLocalTime ?? "02:00:00"
                            }));
                            this.$nextTick(() => {
                                this.initTimePickers();
                            });
                        }
                    } catch (error) {
                        this.result = { status: "Error", body: error.toString() };
                    }
                },
                async save() {
                    const payload = {
                        workerSchedule: {
                            environments: this.entries.map(entry => ({
                                environment: entry.environment,
                                company: entry.company,
                                runAtLocalTime: this.normalizeTime(entry.runAtLocalTime)
                            }))
                        }
                    };

                    this.result = { status: "Saving...", body: JSON.stringify(payload, null, 2) };
                    try {
                        const response = await fetch("/api/worker-schedule", {
                            method: "PUT",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify(payload)
                        });
                        const raw = await response.text();
                        const body = this.formatApiBody(raw, response);
                        this.result = { status: response.status, body: body || "<empty>" };
                        if (response.ok) {
                            this.lastSaved = new Date().toLocaleString();
                        }
                    } catch (error) {
                        this.result = { status: "Error", body: error.toString() };
                    }
                }
            }
        }).mount("#app");
    </script>
}
